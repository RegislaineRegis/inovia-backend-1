{
  "name": "inovia-backend",
  "version": "1.0.0",
  "description": "Backend API for Inovia FullStack Test",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "build": "webpack build",
    "compose": "docker-compose down --remove-orphans && docker-compose up --build --force-recreate",
    "compose:d": "npm run compose -- -d",
    "lint": "eslint '*/**/*.{js,ts}' --fix",
    "test:verbose": "jest --passWithNoTests --runInBand --detectOpenHandles --verbose",
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles --silent --noStackTrace",
    "test:watch": "npm run test -- --watch",
    "test:unit": "npm run test -- -c jest.unit.config.ts",
    "test:integration": "npm run test -- -c jest.integration.config.ts",
    "test:coverage": "npm run test -- --coverage",
    "test:ci:unit": "npm run test:unit -- --coverage",
    "test:ci:integration": "npm run test:integration -- --coverage",
    "test:staged": "npm test -- --findRelatedTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leandroluk/inovia-backend.git"
  },
  "keywords": [
    "inovia",
    "backend"
  ],
  "author": {
    "name": "Leandro S. Gomes",
    "email": "leandroluk@gmail.com",
    "url": "https://www.linkedin.com/in/leandroluk"
  },
  "bugs": {
    "url": "https://github.com/leandroluk/inovia-backend/issues"
  },
  "homepage": "https://github.com/leandroluk/inovia-backend#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@jest/types": "^29.3.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.15",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "commitizen": "^4.2.6",
    "commitlint": "^17.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.1",
    "joi": "^17.7.0",
    "openapi-types": "^12.1.0",
    "pg": "^8.8.0",
    "swagger-ui-express": "^4.6.0",
    "winston": "^3.8.2"
  }
